<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context="com.driverapp.android.StartActivity"
    >
    <ImageView
        android:scaleType="centerInside"
        android:src="@drawable/splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/login_fb"
            android:text="facebook"
            android:textColor="#fff"
            android:textSize="14sp"
            android:background="#3B4E8B"
            android:textAllCaps="false"
            android:layout_margin="8dp"
            android:layout_width="280dp"
            android:layout_height="50dp" />
        <Button
            android:text="vk"
            android:id="@+id/login_vk"
            android:textSize="14sp"
            android:textColor="#fff"
            android:background="#3F5B81"
            android:textAllCaps="false"
            android:layout_margin="8dp"
            android:layout_width="280dp"
            android:layout_height="50dp" />
        <Button
            android:text="twitter"
            android:id="@+id/login_tw"
            android:textSize="14sp"
            android:textColor="#fff"
            android:background="#16AFE9"
            android:textAllCaps="false"
            android:layout_margin="8dp"
            android:layout_width="280dp"
            android:layout_height="50dp"/>
        <TextView
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="#343434"
            android:text="Мы обещаем не размещать инфомацию без вашего согласия"
            android:layout_width="280dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/skip"
            android:layout_gravity="right"
            android:text="skip"
            android:background="#00000000"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
    </LinearLayout>

</RelativeLayout>