<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.driverapp.android.create.CreateActivity">

    <EditText
        android:id="@+id/text"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toLeftOf="@+id/image"
        android:gravity="top"
        android:hint="Type here"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="85dp" />
    <ImageView
        android:background="#D8D8D8"
        android:src="@drawable/ic_add_black"
        android:scaleType="centerInside"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        android:id="@+id/image"
        android:layout_width="85dp"
        android:layout_height="85dp" />
    <Button
        android:layout_below="@+id/text"
        android:id="@+id/pick_map"
        android:text="Attach location"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:background="@drawable/fake_divider"
        android:layout_width="match_parent"
        android:layout_height="48dp" />
    <Button
        android:id="@+id/pick_category"
        android:layout_below="@+id/pick_map"
        android:text="Pick category"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:background="@drawable/fake_divider"
        android:layout_width="match_parent"
        android:layout_height="48dp"  />
    <LinearLayout
        android:background="@drawable/fake_divider"
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_below="@id/pick_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Опубликовать в:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="10dp"
                android:text="Facebook"
                android:textSize="16sp"
                android:textColor="#343434"
                android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.SwitchCompat
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        </LinearLayout>
</RelativeLayout>
